<h1>Les sujets</h1>

	<table class="table">
		<thead>
			<tr>
				<td>ID</td>
				<td>Nom</td>
			</tr>
		</thead>


		<tbody>
			<% @topics.each do |topic| %>
			<tr>
				<td><%= topic.id %></td>
				<td><%= topic.name %></td>
				<td><a href="<%= topic_path(topic.id)%>" class="btn btn-info">Voir tous les life-Hacks à ce sujet</a>
				<td><a href="<%= edit_topic_path(topic.id)%>" class="btn btn-warning">Editer</a>
				<td><a href="<%= topic_path(topic.id)%>" class="btn btn-danger" data-confirm="Etes-vous sûr ?" data-method="DELETE">Supprimer</a>
				
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>

	<p><a href="<%= new_topic_path %>" class="btn btn-success">Créer un nouveau sujet</a></p>

