<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="<%= domain_path %>"><%= @topic.domain.name %></a></li>
    <li class="breadcrumb-item active" aria-current="page"><%=@topic.name%></li>
  </ol>
</nav>

<div class="card">

  <div class="card-header">
    <div class="font-weight-bold text-center">
    	<h1>Sujet : <%=@topic.name%></h1>
    </div>
  </div>


  </div>

  <div class="card-body">
    <div class="card-deck">
     <%@tips.all.each do |tips|%>
        <div class="col-md-4 col-lg-4 mb-4">
          <article class="card shadow h-70">
            <img class="card-img-top" height= "250px" src="<%= tips.topic.domain.photo %>" alt="">
            <div class="card-body p-5">
              <a class="d-inline-block text-muted font-weight-medium text-uppercase small mb-2" href="<%= domain_path(tips.topic.domain.id) %>"><%= tips.topic.domain.name %> </a>
              <h2 class="h5 font-weight-medium">
                <a href="<%= tip_path(tips.id) %>"> <%= tips.name %></a>
              </h2>
              <p><%=tips.content%></p>
            </div>
            <div class="card-footer border-0 pt-0 pb-5 px-0 mx-5">
              <div class="media align-items-center">
                 <div class="media-body d-flex justify-content-start text-muted font-size-1 ml-2">
                  Auteur:        <%= tips.user.first_name %> <%= tips.user.last_name %></br> 
                  Créé le:       <%= (tips.created_at).day %>/ <%= (tips.created_at).month %>/ <%= (tips.created_at).year %></br>
                  Mis à jour le: <%= (tips.updated_at).day %>/<%= (tips.updated_at).month %>/<%= (tips.updated_at).year %>
                </div>
              </div>
            </div>
          </article>
        </div>
    <%end%>
 </div>
  </div>

</div>