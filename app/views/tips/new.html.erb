<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-3 text-light"><strong>Créer un life-hack </strong><br></h1>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <%= form_for @tip, url: tips_path, html: { class: "form-signin mt-3" } do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center"></h1>
        <div class="form-group">
          <%= f.label :title, "Choisir un sujet :" %><br />
            <div class="btn-group btn-group-sm" role="group" aria-label="...">
              <%= f.collection_select :topic_id, Topic.all, :id, :name, class: "form-control", :required => true %>
              <p> </p> <a class="btn btn-sm btn-outline-dark btn-block" href="<%= new_topic_path %> "> Créer un sujet<span class="sr-only">(current)</span></a>
          </div>

        </div>

        <div class="form-group">
          <%= f.label :title, "Titre" %><br />
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :title, "Contenu" %><br />
          <%= f.text_area :content, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :title, "Ajouter une photo ? (url)" %><br />
          <%= f.text_field :photo, class: "form-control" %>
        </div>
       
        <div class="actions mt-5">
          <%= f.submit "Créer le life-hack", class: "btn btn-lg btn-outline-success btn-block active" %>
        </div>
      <% end %>
    </div>
  </div>
</div>