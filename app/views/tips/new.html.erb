<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <%= form_for @tip, url: tips_path, html: { class: "form-signin mt-3" } do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center"></h1>
        <div class="form-group">
          <%= f.label :title, "Sujet" %><br />
            <div class="btn-group btn-group-sm" role="group" aria-label="...">
              <%= f.collection_select :topic_id, Topic.all, :id, :name, prompt: 'Choisir un sujet', class: "form-control", :required => true %>
              <a class="link" href="<%= new_topic_path %> ">ou alors créer un sujet<span class="sr-only">(current)</span></a>
          </div>

        </div>

        <div class="form-group">
          <%= f.label :title, "Titre" %><br />
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :title, "Contenu" %><br />
          <%= f.text_area :content, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :title, "Ajouter une photo ? (url)" %><br />
          <%= f.text_field :photo, class: "form-control" %>
        </div>
       
        <div class="actions mt-5">
          <%= f.submit "Créer le life-hack", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>