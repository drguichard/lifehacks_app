<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>

      <%= form_for @tip, url: tip_path, html: { class: "form-signin mt-3" } do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Modifier le life-hack</h1>
        <div class="form-group">
          <%= f.label :title, "Titre" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :title, "Contenu" %><br />
          <%= f.text_area :content, autofocus: true, autocomplete: "contenu", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :title, "Url photo" %><br />
          <%= f.text_field :photo, autofocus: true, placeholder: 'url', autocomplete: "photo", class: "form-control" %>
        </div>
       
 
        <div class="actions mt-5">
          <%= f.submit "Mettre à jour", class: "btn btn-lg btn-outline-dark btn-block" %><br>
          <a href="<%= tip_path %>" class="btn btn-outline-danger btn-block" data-confirm="Etes-vous sûr ?" data-method="DELETE">Supprimer</a>
        </div>
      <% end %>
    </div>



  </div>

</div>