<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page"><%= @domain.name %> / </li>
  </ol>
</nav>

<div class="card">
  <div class="card-header">
    <div class="font-weight-bold text-center">
    	<h1>Domaine : <%=@domain.name%></h1>
    </div>
  </div>


  </div>

  <div class="card-body">
    <div class="card-deck">
     <%@topics.all.each do |topics|%>
        <div class="col-md-4 col-lg-4 mb-4">
          <article class="card shadow h-70">
            <img class="card-img-top" height= "250px" src="<%= topics.domain.photo %>" alt="">
            <div class="card-body p-5">
              <div class="badge badge-pill badge-light ">
                <h5><a href="<%= topic_path(topics.id) %>"><%= topics.name %></a></h5>
              </div>
            </div>
            <div class="card-footer border-0 pt-0 pb-5 px-0 mx-5">
              <div class="media align-items-center">
                 <div class="media-body d-flex justify-content-start text-muted font-size-1 ml-2">
                  Auteur:        <%= topics.user.first_name %> <%= topics.user.last_name %></br> 
                  Créé le:       <%= (topics.created_at).day %>/ <%= (topics.created_at).month %>/ <%= (topics.created_at).year%></br>
                  Mis à jour le: <%= (topics.updated_at).day %>/<%= (topics.updated_at).month %>/<%= (topics.updated_at).year %>
                </div>
              </div>
            </div>
          </article>
        </div>
    <%end%>
 </div>
 </div>

</div>

