<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-3 text-light"><strong>Profil de <br><%= @user.first_name %> <%= @user.last_name %> </strong><br></h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_for @user, url: dashboard_update_path, html: { class: "form-signin mt-3" } do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Modifier le profil</h1>
        <div class="form-group">
          <%= f.label :title, "Ma photo" %><br />
          <%= f.file_field :image, autocomplete: "photo", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :title, "Prénom" %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
        </div>
         <div class="form-group">
          <%= f.label :title, "Nom" %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :text, "Ma description" %><br />
          <%= f.text_area :description, autofocus: true, autocomplete: "description", class: "form-control" %>
        </div>
 


        <div class="actions mt-5">
          <%= f.submit "Mettre à jour", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>